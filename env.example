# Flask configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
SECURITY_PASSWORD_SALT=your-password-salt-here

# Database configuration
DATABASE_URL=postgresql://user:pass@localhost/rdlearning
DEV_DATABASE_URL=sqlite:///dev.db

# Mail configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@rdlearning.com

# Redis configuration
REDIS_URL=redis://localhost:6379/0

# Stripe configuration
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Firebase configuration
FIREBASE_CREDENTIALS=path/to/firebase-credentials.json

# JWT configuration
JWT_SECRET_KEY=your-jwt-secret-key

# Admin configuration
ADMIN_EMAIL=admin@rdlearning.com
SUPPORT_EMAIL=support@rdlearning.com

# Logging configuration
LOG_TO_STDOUT=False
LOG_LEVEL=INFO

